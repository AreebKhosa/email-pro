# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
PGHOST=your_postgres_host
PGPORT=5432
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGDATABASE=your_database_name

# Authentication
SESSION_SECRET=your_session_secret_here
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# AI Services
OPENAI_API_KEY=sk-your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Payment Processing
STRIPE_SECRET_KEY=sk_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_your_stripe_publishable_key_here

# Object Storage
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id_here
PUBLIC_OBJECT_SEARCH_PATHS=/your_bucket/public
PRIVATE_OBJECT_DIR=/your_bucket/.private

# Email Services (Required for email verification and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=your_email@gmail.com

# Development
NODE_ENV=development
PORT=5000

# Replit Configuration (automatically set in Replit environment)
REPL_ID=your_repl_id
REPLIT_DOMAINS=your_domain.replit.app
ISSUER_URL=https://replit.com/oidc